<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3307/bdistribucionpolicial?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping resource="model/pojo/Delito.hbm.xml"/>
    <mapping resource="model/pojo/Comisaria.hbm.xml"/>
    <mapping resource="model/pojo/Distrito.hbm.xml"/>
    <mapping resource="model/pojo/Prueba.hbm.xml"/>
    <mapping resource="model/pojo/Tipodelito.hbm.xml"/>
    <mapping resource="model/pojo/Turno.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
